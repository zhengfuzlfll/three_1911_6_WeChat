  border-bottom: 1rpx solid #ccc;
}
.prolist .proitem .itemimg{
  width: 100px;
  height: 100px;
  /* border:1px solid red; */
}
.prolist .proitem .itemimg image{
  width: 90px;
  height: 90px;
  border:1rpx solid #ccc;
  box-sizing: border-box;
  /* 如果是网页开发，需要写一个物理像素 ---- scss库  ---- 1px边框 */
  margin: 5px;
}
.prolist .proitem .iteminfo{
  flex: 1;
  padding: 3px 5px;
}